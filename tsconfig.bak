{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "paths": {
      "@app-pmscf/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ESNext",
		"types": [ "jest", "node" ]
  },
  "exclude": [".git", ".github", ".jest", "coverage", "node_modules", "dist"],
  "files": ["src/index.ts"],
  "include": ["./src/**/*.ts"]
}
